<UserControl x:Class="IsolatedStorageExplorerClient.UI.Controls.OperationsPanel.ApplicationLocked"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             Background="#FF293955">
    <Grid HorizontalAlignment="Center">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Image  Source="/IsolatedStorageExplorerClient;component/UI/Resources/Images/appLocked.png"
                Margin="15" Width="40" Height="40"/>
        <Label Content="Application is locked by a different client" Grid.Column="1"
               Foreground="White" VerticalAlignment="Center" />
    </Grid>
</UserControl>